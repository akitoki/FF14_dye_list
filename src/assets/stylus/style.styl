@import 'reset.styl'

mediaPad()
  @media only screen and (max-width 1020px)
    {block}

mediaSp()
  @media only screen and (max-width 767px)
    {block}

.wrapper
  width 100%
  min-height 100vh
  min-height 100dvh
  color #fff
  position relative
  &::after
    content ""
    width 100vw
    height 100vh
    height 100dvh
    background linear-gradient(rgba(108,105,105,1) 0%, rgba(38,37,37,1) 100%)
    position fixed
    left 0
    top 0
    z-index -1
  .h1-title
    background rgba(#fff, .7)
    padding 15px 0
    font-size 24px
    color #000
    margin 0
    text-align center
    +mediaSp()
      font-size 20px
  .main-contents
    width 100%
    padding 0 20px
    max-width 1060px
    margin 0 auto
    min-height calc(100vh - 130px)
    padding-bottom 80px
    +mediaPad()
      width calc(100% - 40px)
    +mediaSp()
      width calc(100vw - 30px)
      min-height calc(100dvh - 174px)
      margin-bottom 50px
    .title
      text-align center
      font-size 20px
      border-bottom 1px solid #fff
      padding 30px 0 15px
      margin-bottom 20px
      +mediaSp()
        font-size 18px
        padding 20px 0 10px
.dye-select-wrap
  .color-category-wrap
    text-align center
    label
      position relative
      margin 0 20px
      cursor pointer
      +mediaSp()
        margin 0 20px 0 0
        &:last-child
          margin-right 0
      input
        display none
      .cursor
        display none
        width 60px
        height 60px
        border-radius 50%
        padding 5px
        +mediaSp()
          width 30px
          height 30px
      span
        position relative
        display inline-block
        width 60px
        height 60px
        &::before
          content ""
          display inline-block
          border-radius 50%
          width 60px
          height 60px
          +mediaSp()
            width 30px
            height 30px
        +mediaSp()
          width 30px
          height 30px

        &.white
          &::before
            background #fff
        &.red
          &::before
            background #d21c1c
        &.brown
          &::before
            background #aa7236
        &.yellow
          &::before
            background #f0dc2c
        &.green
          &::before
            background #96cc3c
        &.blue
          &::before
            background #4a82f3
        &.purple
          &::before
            background #a662e4
        &::after
          content ""
          width 60px
          height 60px
          display block
          border-radius 50%
          border 4px solid #000
          position absolute
          left 0
          top 0
          +mediaSp()
            width 30px
            height 30px
      input:checked
        + .cursor
          display block
          position absolute
          left -5px
          top -5px
          border: 5px solid #fff
          border-radius 50%
          width 70px
          height 70px
          +mediaSp()
            width 36px
            height 36px
            border-width 3px
            left -3px
            top -3px
  .wrap
    +mediaSp()
      display flex
      flex-wrap wrap
    label
      display inline-block
      width calc(100% / 3)
      line-height 1
      padding 10px 20px
      cursor pointer
      +mediaPad()
        width 50%
      +mediaSp()
        display flex
        aling-items flex-start
        font-size 14px
        width 50%
        padding 12px 0
      &:hover
        background rgba(#fff, 0.1)
        +mediaSp()
          background none
      input
        display none
        &:checked
          + span
            &::after
              content ""
              display block
              width 40px
              height 40px
              border-radius 50%
              border 5px solid #fff
              left -7px
              top -7px
              position absolute
              +mediaSp()
                width 20px
                height 20px
                border-width 3px
                left -5px
                top -5px

      span
        position relative
        display inline-block
        margin-right 10px
        width 30px
        height 30px
        border-radius 50%
        border 2px solid #000
        vertical-align middle
        +mediaSp()
          width 14px
          height 14px
          vertical-align -2px
          letter-spacing normal
          margin-right 5px

.shop-list-wrap
  .notice
    text-align right
    margin-top 30px
    font-size 14px
    +mediaSp()
      font-size 12px
      text-align center
  ul
    padding 0
    list-style none
    li
      + li
        margin-top 20px
      dl
        display flex
        border 1px solid #fff
        align-items center
        position relative
        +mediaSp()
          display block
        dt
          padding 15px 20px
          width 255px
          font-size 16px
          border-right 1px solid #fff
          background #fff
          color #000
          +mediaSp()
            width 100%
            padding 10px 15px
            height 44px
        dd
          flex 1
          display flex
          justify-content space-between
          width 100%
          font-size 16px
          +mediaSp()
            display block
          p
            padding 15px 20px
            +mediaSp()
              padding 10px 15px
              font-size 14px
          span
            display block
            padding 15px 20px
            background #fff
            color #000
            cursor pointer
            &:hover
              cursor pointer
              opacity .7
            +mediaSp()
              display inline-block
              position absolute
              right 0
              top 0
              background #000
              color #fff
              font-size 15px
              padding 10px 15px
              height 43px
.map-modal
  position fixed
  top 0
  left 0
  width 100%
  height 100vh
  height 100dvh
  background rgba(#000, 0.7)
  z-index 100
  .map-modal-inner
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    +mediaSp()
      padding 0 15px
      width 100%
      img
        max-width 100%
    .button
      text-align center
      button
        appearance none
        border 0
        padding 10px 40px
        border-radius 10px
        margin-top 40px
        color #000
        background #fff
        font-size 20px
.copyright
  background #000
  text-align center
  font-size 12px
  color #fff
  line-height 1
  padding 20px 0
  +mediaSp()
    font-size 10px
    line-height 1.2
